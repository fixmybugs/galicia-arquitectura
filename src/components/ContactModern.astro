<section id="contacto" class="py-20 sm:py-28 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div>
        <div class="inline-flex items-center gap-2 bg-gray-100 px-4 py-2 text-xs font-semibold tracking-widest uppercase text-gray-700 mb-6">
          <span class="material-symbols-outlined text-sm">mail</span>
          <span>Contacto</span>
        </div>
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          Hablemos de tu Proyecto
        </h2>
        <p class="text-lg sm:text-xl text-gray-600 mb-12">
          Estamos listos para convertir tu visión en realidad. Contáctanos y comencemos a trabajar juntos.
        </p>

        <!-- Contact Info -->
        <div class="space-y-6">
          <div class="flex items-start gap-4 group">
            <div class="w-12 h-12 bg-gray-900 text-white rounded-lg flex items-center justify-center flex-shrink-0 transition-all duration-300 group-hover:bg-gray-800 group-hover:scale-110">
              <span class="material-symbols-outlined">mail</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
              <a href="mailto:info@galicia.com" class="text-gray-600 hover:text-gray-900 transition-colors">
                info@galicia.com
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4 group">
            <div class="w-12 h-12 bg-gray-900 text-white rounded-lg flex items-center justify-center flex-shrink-0 transition-all duration-300 group-hover:bg-gray-800 group-hover:scale-110">
              <span class="material-symbols-outlined">call</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Teléfono</h3>
              <a href="tel:+50255555555" class="text-gray-600 hover:text-gray-900 transition-colors">
                +502 5555 5555
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4 group">
            <div class="w-12 h-12 bg-gray-900 text-white rounded-lg flex items-center justify-center flex-shrink-0 transition-all duration-300 group-hover:bg-gray-800 group-hover:scale-110">
              <span class="material-symbols-outlined">location_on</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Ubicación</h3>
              <p class="text-gray-600">
                Guatemala City, Guatemala
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4 group">
            <div class="w-12 h-12 bg-gray-900 text-white rounded-lg flex items-center justify-center flex-shrink-0 transition-all duration-300 group-hover:bg-gray-800 group-hover:scale-110">
              <span class="material-symbols-outlined">schedule</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Horario</h3>
              <p class="text-gray-600">
                Lun - Vie: 9:00 - 18:00
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Form -->
      <div class="bg-gray-50 rounded-lg p-8 sm:p-12 border border-gray-200">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Solicita una Consulta</h3>
        <form class="space-y-6">
          <div>
            <label class="block text-sm font-semibold text-gray-900 mb-2 uppercase tracking-wide">
              Nombre Completo
            </label>
            <input 
              type="text" 
              class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all"
              placeholder="Juan Pérez"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-900 mb-2 uppercase tracking-wide">
              Email
            </label>
            <input 
              type="email" 
              class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all"
              placeholder="ejemplo@correo.com"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-900 mb-2 uppercase tracking-wide">
              Teléfono
            </label>
            <input 
              type="tel" 
              class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all"
              placeholder="+502 1234 5678"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-900 mb-2 uppercase tracking-wide">
              Tipo de Proyecto
            </label>
            <select class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all">
              <option>Diseño Arquitectónico</option>
              <option>Construcción</option>
              <option>Remodelación</option>
              <option>Consultoría</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-900 mb-2 uppercase tracking-wide">
              Mensaje
            </label>
            <textarea 
              rows="4"
              class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all resize-none"
              placeholder="Cuéntanos sobre tu proyecto..."
            ></textarea>
          </div>

          <button type="submit" class="btn-primary w-full group">
            <span>Enviar Solicitud</span>
            <span class="material-symbols-outlined text-lg transform group-hover:translate-x-1 transition-transform">send</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .btn-primary {
    @apply inline-flex items-center justify-center gap-2 bg-gray-900 text-white px-8 py-4 text-sm font-semibold tracking-wide uppercase transition-all duration-300 hover:bg-gray-800 hover:shadow-lg;
  }

  .material-symbols-outlined {
    font-variation-settings:
    'FILL' 0,
    'wght' 300,
    'GRAD' 0,
    'opsz' 24
  }
</style>

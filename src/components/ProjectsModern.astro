---
import { Image } from 'astro:assets';

// Import all portrait images
const portraits = import.meta.glob('/src/assets/gallery/**/portrait.webp', { eager: true });

const projectsData = Object.entries(portraits).map(([path, image]) => {
  // path example: /src/assets/gallery/1_lopes/webp/portrait.webp
  const parts = path.split('/');
  // Find the segment after 'gallery'
  const galleryIndex = parts.indexOf('gallery');
  const folderName = parts[galleryIndex + 1]; // e.g. "1_lopes"

  const [rankStr, ...nameParts] = folderName.split('_');
  const rank = parseInt(rankStr);
  const title = nameParts.join(' ').replace(/\b\w/g, l => l.toUpperCase());

  return {
    rank,
    title,
    category: "Residencial", // Default category
    location: "Guatemala",
    year: "2024",
    image: image.default,
    path: path
  };
}).sort((a, b) => a.rank - b.rank).slice(0, 5);

const gridPattern = [
  "md:col-span-1 md:row-span-2", // Vertical
  "md:col-span-1 md:row-span-1", // Square
  "md:col-span-1 md:row-span-1", // Square
  "md:col-span-1 md:row-span-2", // Vertical
  "md:col-span-2 md:row-span-2", // Big Square
];

const projects = projectsData.map((proj, index) => ({
  ...proj,
  gridClass: gridPattern[index % gridPattern.length],
  featured: index === 0
}));
---

<section id="proyectos" class="py-20 sm:py-28 px-4 sm:px-6 lg:px-8 bg-white relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent"></div>
  <div class="absolute -left-10 top-40 w-40 h-40 bg-gray-50 rounded-full blur-3xl opacity-50"></div>
  <div class="absolute -right-10 bottom-40 w-60 h-60 bg-gray-50 rounded-full blur-3xl opacity-50"></div>

  <div class="max-w-[1400px] mx-auto relative z-10">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-end gap-8 mb-16">
      <div class="max-w-2xl">
        <div class="inline-flex items-center gap-2 bg-gray-100 px-4 py-2 text-xs font-bold tracking-[0.2em] uppercase text-gray-900 mb-6 border border-gray-200">
          <span class="material-symbols-outlined text-sm">grid_view</span>
          <span>Nuestra Obra</span>
        </div>
        <h2 class="text-3xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-gray-900 leading-[0.9] tracking-tight mb-6">
          ARQUITECTURA <br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-gray-500 to-gray-900 block sm:inline">EXTRAORDINARIA</span>
        </h2>
      </div>
      
      <a href="/proyectos" class="group flex items-center gap-4 text-sm font-bold uppercase tracking-widest border-b-2 border-gray-900 pb-2 hover:text-gray-600 hover:border-gray-600 transition-all">
        <span>Ver Todo el Portafolio</span>
        <span class="material-symbols-outlined text-xl transform group-hover:translate-x-2 transition-transform">arrow_forward</span>
      </a>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-4 auto-rows-[350px] gap-4">
      {projects.map((project) => (
        <div class={`group relative overflow-hidden bg-gray-100 ${project.gridClass}`}>
          <Image 
            src={project.image}
            alt={project.title}
            class="w-full h-full object-cover transition-transform duration-1000 ease-out group-hover:scale-110"
            width={800} 
            height={800}
          />
          
          <!-- White Overlay Hover Effect -->
          <div class="absolute inset-0 bg-white/90 opacity-0 group-hover:opacity-100 transition-all duration-500 flex flex-col justify-center items-center p-8 text-center transform translate-y-4 group-hover:translate-y-0">
            <span class="text-xs font-bold uppercase tracking-[0.2em] text-gray-400 mb-3 transform -translate-y-2 group-hover:translate-y-0 transition-transform duration-500 delay-75">
              {project.category}
            </span>
            <h3 class="text-2xl md:text-3xl font-black text-gray-900 mb-2 leading-tight transform -translate-y-2 group-hover:translate-y-0 transition-transform duration-500 delay-100">
              {project.title}
            </h3>
            <p class="text-gray-500 text-sm font-medium mb-6 transform -translate-y-2 group-hover:translate-y-0 transition-transform duration-500 delay-150">
              {project.location} — {project.year}
            </p>
            
            <div class="inline-flex items-center gap-2 border border-gray-900 px-6 py-2 text-xs font-bold uppercase tracking-widest text-gray-900 hover:bg-gray-900 hover:text-white transition-colors duration-300 transform -translate-y-2 group-hover:translate-y-0 delay-200">
              <span>Explorar</span>
              <span class="material-symbols-outlined text-sm">arrow_outward</span>
            </div>
          </div>

          <!-- Default Minimal Label (Visible when not hovering) -->
          <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black/60 to-transparent group-hover:opacity-0 transition-opacity duration-300">
            <h3 class="text-white font-bold text-xl tracking-wide">{project.title}</h3>
            <p class="text-gray-200 text-xs uppercase tracking-widest mt-1">{project.category}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Decorative Bottom -->
    <div class="mt-8 flex justify-between items-center text-xs text-gray-400 font-mono uppercase tracking-widest border-t border-gray-100 pt-8">
      <span>Galicia Arquitectura © 2024</span>
      <div class="flex gap-8">
        <span>Diseño</span>
        <span>Innovación</span>
        <span>Espacio</span>
      </div>
    </div>
  </div>
</section>

<style>
  .material-symbols-outlined {
    font-variation-settings:
    'FILL' 0,
    'wght' 400,
    'GRAD' 0,
    'opsz' 24
  }
</style>
